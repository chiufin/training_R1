div#createUserModal
    div(class='modal_content')
        h1 Create User
        form(method='POST' action='/api/users')
            div(class="mdl-textfield mdl-js-textfield")
                label(for='email' class="mdl-textfield__label") Email
                input(type='input' id='user' name='email' class="mdl-textfield__input")
            div(class="mdl-textfield mdl-js-textfield")
                label(for='password' class="mdl-textfield__label") Password
                input(type='password' id='password' name='password' class="mdl-textfield__input")
            div
                button(type='submit' class="mdl-button mdl-js-button") Create
        button#closeUserPanel(class="modal_close mdl-button mdl-js-button mdl-button--icon") 
            i(class="material-icons") clear