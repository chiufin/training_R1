div#updateUserModal
    div(class='modal_content')
        h1 Update User
        p(class="time")
        div(class="mdl-textfield mdl-js-textfield")
            label(for='update_user_id' class="mdl-textfield__label") Id
            input(type='input' id='update_user_id' class="mdl-textfield__input")
        div(class="mdl-textfield mdl-js-textfield")
            label(for='update_user_name' class="mdl-textfield__label") Name
            input(type='input' id='update_user_name' class="mdl-textfield__input")
        div(class="mdl-textfield mdl-js-textfield")
            label(for='update_user_email' class="mdl-textfield__label") Email
            input(type='input' id='update_user_email' class="mdl-textfield__input")
        div(class="mdl-textfield mdl-js-textfield")
            label(for='update_user_password' class="mdl-textfield__label") New Password
            input(type='password' id='update_user_password' class="mdl-textfield__input")
        div(class="mdl-textfield mdl-js-textfield")
            label(for='update_user_password_confirm' class="mdl-textfield__label") Comfirm Password
            input(type='password' id='update_user_password_confirm' class="mdl-textfield__input")
            span(class="error-psw-msg mdl-textfield__error") Password should be the same  
            span(class="error-msg mdl-textfield__error") Invalid input. Please try again. 
        div
            button#updateUserBtn(class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent") Update
        button#closeUpdateUserPanel(class="modal_close mdl-button mdl-js-button mdl-button--icon") 
            i(class="material-icons") clear