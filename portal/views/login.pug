extends layout

block content
  if ifLogin
    h1 Welcome, What is your main focus for today?
    a(href='/users') user management 
    br
    a(href='/api/logout') Log out
  else 
    h1 Login
    form(method='POST' action='/api/login')
      div(class="mdl-textfield mdl-js-textfield")
        label(for='account' class="mdl-textfield__label") Account
        input(type='input' id='account' name='account' class="mdl-textfield__input")
      br
      div(class="mdl-textfield mdl-js-textfield")
        label(for='password' class="mdl-textfield__label") Password
        input(type='password' id='password' name='password' class="mdl-textfield__input")
      div
        button(type='submit' class='mdl-button mdl-js-button') Log in
