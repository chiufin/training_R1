extends layout

mixin nav
    p #{userName}
    a(href='/login/logout') Log out

mixin createUserModal
    div#createUserModal
      button#closeUserPanel(class="mdl-button mdl-js-button") Close
      h1 Create User
      form(method='POST' action='/users/post')
          div(class="mdl-textfield mdl-js-textfield")
            label(for='user' class="mdl-textfield__label") User Name
            input(type='input' id='user' name='user' class="mdl-textfield__input")
          div
              button(type='submit' class="mdl-button mdl-js-button") Update


block content
  +nav
  +createUserModal
  h1 User list
  button#createUser(class="mdl-button mdl-js-button") Create User
  ul(class="mdl-list")
    each val in users
        li(class="mdl-list__item")= val
            br
            button(class="mdl-button mdl-js-button") Modify
            button(class="mdl-button mdl-js-button") Delete
