mixin modal(mainID='createUserModal', mainTitle='Create User')
    div(id=mainID class="modal")
        div(class='modal_content')
            h1=mainTitle 
                block 
                div
                    button(class="submit mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent") Create
            button#closeCreateUserPanel(class="modal_close mdl-button mdl-js-button mdl-button--icon") 
                i(class="material-icons") clear