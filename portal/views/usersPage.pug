extends layout

block content
  include components/header.pug
  include components/tab.pug
  include components/createUserModal.pug
  include components/updateUserModal.pug
  div#users
    h1 User list
    button#createUser(class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect") Create User
    br
    table(class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp")
        thead
            tr
                th(class="mdl-data-table__cell--non-numeric") Id
                th Name
                th Email
                th Edit
                th Delete
        tbody
            each val, i in users
                tr
                    td(class="id mdl-data-table__cell--non-numeric") #{val.id}
                    td #{val.name} 
                    td #{val.email}
                    td 
                        button(class="edit mdl-button mdl-js-button mdl-button--icon") 
                            div(id="modify_user"+i class="icon material-icons") edit
                            div(class="mdl-tooltip" data-mdl-for="modify_user"+i) edit
                    td
                        button(class="delete mdl-button mdl-js-button mdl-button--icon") 
                            div(id="delete_user"+i class="icon material-icons") delete
                            div(class="mdl-tooltip" data-mdl-for="delete_user"+i) delete


